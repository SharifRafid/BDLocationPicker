<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="20dp"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/titleBarTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choose_a_location"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:textColor="#4A4A4A"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/selectedItemsViewerLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/selectedDivisionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khulna"
                android:gravity="center"
                android:textColor="#536DFE"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:paddingStart="10dp"
                android:drawablePadding="10dp"
                app:drawableRightCompat="@drawable/ic_baseline_double_arrow_24"
                app:drawableEndCompat="@drawable/ic_baseline_double_arrow_24" />
            <TextView
                android:id="@+id/selectedDistrictTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Magura"
                android:gravity="center"
                android:textColor="#536DFE"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:paddingStart="10dp"
                android:drawablePadding="10dp"
                app:drawableRightCompat="@drawable/ic_baseline_double_arrow_24"
                app:drawableEndCompat="@drawable/ic_baseline_double_arrow_24" />
            <TextView
                android:id="@+id/selectedUpazilaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Magura Sadar"
                android:gravity="center"
                android:textColor="#536DFE"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:paddingStart="10dp"
                android:drawablePadding="10dp"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/mainLinearItemsListContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</androidx.cardview.widget.CardView>